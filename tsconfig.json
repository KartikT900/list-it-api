{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "strict": true,
    "module": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["prisma","src/**/*.ts"],
  "exclude": ["node_modules","setupTest.js"]
}